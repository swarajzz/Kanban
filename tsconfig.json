{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/_components/*": ["app/_components/*"],
      "@/public/*": ["public/*"],
      "@/_hooks/*": ["app/_hooks/*"],
      "@/_lib/*": ["app/_lib/*"],
      "@/_store/*": ["app/_store/*"],
      "@/_types/*": ["app/_types/*"],
      "@/app/*": ["app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/_lib/auth.ts",
    "app/_components/ColumnContext.jsx"
  ],
  "exclude": ["node_modules"]
}
